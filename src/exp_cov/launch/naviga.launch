<launch>

    <arg name="rviz_conf" default="$(find exp_cov)/config/rviz_navigation.rviz"/>
    <arg name="mapfile" default="$(find exp_cov)/maps/map.yaml"/>
    <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>

    <!-- TurtleBot3 -->
    <include file="$(find turtlebot3_bringup)/launch/turtlebot3_remote.launch">
      <arg name="model" value="$(arg model)" />
    </include>
  
    <node name="rviz" pkg="rviz" type="rviz" output="screen" args="-d $(arg rviz_conf)"/>
    <node name="amcl" pkg="amcl" type="amcl" output="screen">
      <rosparam file="$(find exp_cov)/param/amcl_params.yaml" command="load"/>
    </node>  
    <node name="map_server" pkg="map_server" type="map_server" output="screen" args="$(arg mapfile)"/>
    <node name="move_base" pkg="move_base" type="move_base" output="screen" args="--diagnostics">
      <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" />
      <param name="base_global_planner" value="global_planner/GlobalPlanner" />
      <rosparam file="$(find exp_cov)/param/costmap_common_params.yaml" command="load" ns="global_costmap" />
      <rosparam file="$(find exp_cov)/param/costmap_common_params.yaml" command="load" ns="local_costmap" />
      <rosparam file="$(find exp_cov)/param/local_costmap_params.yaml" command="load" />
      <rosparam file="$(find exp_cov)/param/global_costmap_params.yaml" command="load" />
      <rosparam file="$(find exp_cov)/param/move_base_params.yaml" command="load" />
      <rosparam file="$(find exp_cov)/param/base_local_planner_params.yaml" command="load" />
      <rosparam file="$(find exp_cov)/param/dwa_local_planner_params.yaml" command="load" />
    </node>
    

  </launch>