<launch>

    <arg name="scan" default="/base_scan"/>
    <arg name="rviz_conf" default="$(find tirocinio)/config/rviz_navigation.rviz"/>
    <arg name="map_file" default="$(find tirocinio)/maps/map.yaml"/>
  
    <node name="gmapping_slam" pkg="gmapping" type="slam_gmapping" output="screen">
      <remap from="scan" to="$(arg scan)"/>
    </node>
    <node name="rviz" pkg="rviz" type="rviz" output="screen" args="-d $(arg rviz_conf)">
      <remap from="scan" to="$(arg scan)"/>
    </node>
    <node name="amcl" pkg="amcl" type="amcl" output="screen">
        <remap from="scan" to="$(arg scan)"/>
    </node>
    <node name="map_server" pkg="map_server" type="map_server" output="screen" args="$(arg map_file)"/>
    <node name="move_base" pkg="move_base" type="move_base" output="screen"/>

  </launch>