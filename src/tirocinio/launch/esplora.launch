<launch>

  <arg name="scan" default="/base_scan"/>
  <arg name="worldfile" default="/home/aislab/catkin_ws/src/stage_controllers/world/roomba-wander.world"/>
  <arg name="rviz_conf" default="$(find tirocinio)/config/rviz_gmapping.rviz"/>

  <node name="gmapping_slam" pkg="gmapping" type="slam_gmapping" output="screen">
    <remap from="scan" to="$(arg scan)"/>
  </node>
  <node name="rviz_visual" pkg="rviz" type="rviz" output="screen" args="-d $(arg rviz_conf)">
    <remap from="scan" to="$(arg scan)"/>
  </node>

</launch>