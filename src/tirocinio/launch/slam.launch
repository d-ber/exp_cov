<launch>

    <arg name="rviz_conf" default="$(find tirocinio)/config/rviz_slam.rviz"/>
    <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>

    <param name="model" value="$(arg model)"/>

      <!-- TurtleBot3 -->
    <include file="$(find turtlebot3_bringup)/launch/turtlebot3_remote.launch">
      <arg name="model" value="$(arg model)" />
    </include>

    <node name="gmapping_slam" pkg="gmapping" type="slam_gmapping" output="screen">
      <rosparam file="$(find tirocinio)/param/gmapping_params.yaml" command="load"/>
    </node>
    <node name="rviz" pkg="rviz" type="rviz" output="screen" args="-d $(arg rviz_conf)"/>
  
  </launch>